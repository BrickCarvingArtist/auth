@import "../../styles/mixin"
dialog
	position fixed
	top 50%
	left 50%
	transform translate(-50%, -50%)
	max-width w(300)
	background-color transparentify(#000, .8)
	border-radius 4px
	&.hidden
		display none
	&.display
		display block
	p
		padding h(25) w(25)
		text-align center
		font-size h(15)
		line-height h(22)
		color #fff
	.operator
		display flex
		border-top 1px solid #fff
		a
			flex 1
			text-align center
			line-height h(40)
			font-size h(15)
			color #fff
			&:first-of-type
				border-right 1px solid #fff