@import "./reset"
@import "./icon"
@import "./mixin"
body
	background-color #f3f3f3
form
	display flex
	flex-direction column
	align-items center
	> label
		line-height h(50)
		font-size h(16)
		color #666
	&.home
		padding-top h(300)
		bg("/test.jpeg")
		background-repeat no-repeat
		background-position 50% h(100)
		.etc
			h3
				margin-top h(80)
				text-align center
				line-height 2
	&.behavior
		padding 0 w(20)
		section
			padding h(10) 0
			line-height h(22)
			font-size h(14)
			&:not(:last-of-type)
				border-bottom 1px solid #e3e3e3
a
	&.small
		font-size h(12)
div
	&.row
		padding h(10) w(20)
fieldset
	padding 0 w(20)
	width 100%
	border-width 1px 0
	border-color #e3e3e3;
input
	&[type="tel"]
	&[type="password"]
		height h(50)
		background-color #fff
		font-size h(15)
	&.full
		padding 0 w(20)
		width 100%
		&:not(:last-of-type)
			border-bottom-color #e3e3e3
button
	font-size h(15)
	&.full
		width w(335)
		height h(45)
	&.below_input
		margin-top h(20)
button
.anchor
	&.bottom
		position fixed
		bottom 0
		width w(375)
		height h(45)
		border-radius 0
		text-align center
		line-height h(40)
		font-size h(15)
	&.blue
		background-color #639efe
		color #fff